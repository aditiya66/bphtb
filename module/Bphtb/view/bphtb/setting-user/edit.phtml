            options.find('option').remove().end().append($("<option />").val('').text('Silahkan Pilih'));
            for (var i = 0; i < dt.count; i++) {
                options.find('option').remove().end().append($("<option />").val(dt.id_pejabat).text(dt.nama_pejabat));
            }

        });
        if (this.value == '2') {
            $("#s_akses").val("3");
        } else {
            $("#s_akses").val("");
        }
    });
