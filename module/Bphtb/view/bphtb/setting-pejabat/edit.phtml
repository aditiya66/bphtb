<script type="text/javascript">
    $.validate();

    function namapejabat() {
        var alphaExp = /^[ a-zA-Z]+$/;
        var namapej = document.getElementById('s_namapejabat').value;
        var nalt = document.getElementById('namap');
        if (namapej != "") {
            if (!namapej.match(alphaExp)) {
                nalt.innerHTML = "<font color='red'> Isi dengan Huruf</font>";
                document.getElementById('s_namapejabat').focus();
                document.getElementById('s_namapejabat').value = "";
                return false;
            } else {
                nalt.innerHTML = "<span class='icon-check'></span>";
                return true;
            }
        } else {
            nalt.innerHTML = "<font color='red'> Kolom Harus Diisi</font>";
            document.getElementById('s_namapejabat').focus();
            return false;
        }
    }

    function nippejabat() {
        var alphaExp = /^[. 0-9]+$/;
        var nippej = document.getElementById('s_nippejabat').value;
        var nalt = document.getElementById('nipp');
        if (nippej != "") {
            if (!nippej.match(alphaExp)) {
                nalt.innerHTML = "<font color='red'> Isi dengan Angka dan Titik</font>";
                document.getElementById('s_nippejabat').focus();
                document.getElementById('s_nippejabat').value = "";
                return false;
            } else {
                nalt.innerHTML = "<span class='icon-check'></span>";
                return true;
            }
        } else {
            nalt.innerHTML = "<font color='red'> Kolom Harus Diisi</font>";
            document.getElementById('s_nippejabat').focus();
            return false;
        }
    }

    function jabatan() {
        var jab = document.getElementById('s_jabatanpejabat').value;
        var nalt = document.getElementById('jabatanp');
        if (jab != "") {
            nalt.innerHTML = "<span class='icon-check'></span>";
            return true;
        } else {
            nalt.innerHTML = "<font color='red'> Kolom Harus Diisi</font>";
            document.getElementById('s_jabatanpejabat').focus();
            return false;
        }
    }

    function golongan() {
        var selct = document.getElementById('s_golonganpejabat').value;
        var nalt = document.getElementById('golonganp');

        if (selct == 0)
        {
            nalt.innerHTML = "<font color='red'> Pilih Golongan Pejabat</font>";
            document.getElementById('s_golonganpejabat').focus();
            return false;
        }
        else {
            nalt.innerHTML = "<span class='icon-check'></span>";
            return true;
        }
    }

